<ContentPage
    x:Class="ToDoListApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="DarkSlateGray">

    <VerticalStackLayout Padding="10" Spacing="10">
        <!--  Header Section  -->
        <Grid ColumnDefinitions="*, Auto">
            <Label
                FontAttributes="Bold"
                FontFamily="BlackOpsOne"
                FontSize="32"
                HorizontalOptions="Start"
                Text="To-Do List"
                TextColor="OrangeRed" />
            <ImageButton
                BackgroundColor="Transparent"
                Clicked="OnDeleteSelectedClicked"
                HeightRequest="40"
                HorizontalOptions="End"
                Source="Resources/Images/bin.png"
                WidthRequest="40" />
        </Grid>

        <!--  Input Section  -->
        <Frame
            Padding="10"
            BackgroundColor="LightYellow"
            CornerRadius="10">
            <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto">
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    FontAttributes="Bold"
                    FontSize="14"
                    Text="Enter a Task:"
                    TextColor="Black" />
                <Entry
                    x:Name="TaskEntry"
                    Grid.Row="1"
                    Grid.Column="0"
                    Placeholder="Enter a new task"
                    VerticalOptions="Center" />
                <Button
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    BackgroundColor="#FFA500"
                    Clicked="OnAddTaskClicked"
                    CornerRadius="20"
                    Text="Add"
                    TextColor="White" />
            </Grid>
        </Frame>

        <!--  Task List  -->
        <ScrollView>
            <CollectionView
                x:Name="TaskList"
                ItemsSource="{Binding Tasks}"
                SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Margin="5"
                            BackgroundColor="LightYellow"
                            CornerRadius="10">
                            <Grid Padding="5" ColumnDefinitions="Auto, *, Auto">
                                <!--  Checkbox  -->
                                <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}" VerticalOptions="Center" />
                                <!--  Task Title  -->
                                <Label
                                    Grid.Column="1"
                                    FontSize="16"
                                    Text="{Binding Title}"
                                    VerticalOptions="Center" />
                                <!--  Move Buttons  -->
                                <StackLayout
                                    Grid.Column="2"
                                    HorizontalOptions="End"
                                    Orientation="Vertical">
                                    <Button
                                        BackgroundColor="Goldenrod"
                                        Clicked="OnMoveUpClicked"
                                        CommandParameter="{Binding .}"
                                        FontSize="14"
                                        Text="↑"
                                        TextColor="Black" />
                                    <Button
                                        BackgroundColor="Goldenrod"
                                        Clicked="OnMoveDownClicked"
                                        CommandParameter="{Binding .}"
                                        FontSize="14"
                                        Text="↓"
                                        TextColor="Black" />
                                </StackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>
