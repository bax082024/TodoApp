<ContentPage
    x:Class="ToDoListApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--  Background Gradient  -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Offset="0.0" Color="#FF6347" />
            <!--  Tomato  -->
            <GradientStop Offset="1.0" Color="#FFD700" />
            <!--  Gold  -->
        </LinearGradientBrush>
    </ContentPage.Background>

    <!--  ScrollView for the entire page  -->
    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">

            <!--  Header Section  -->
            <Grid ColumnDefinitions="*, Auto">
                <Label
                    Grid.ColumnSpan="3"
                    FontAttributes="Bold"
                    FontFamily="BlackOpsOne"
                    FontSize="36"
                    HorizontalOptions="Center"
                    Text="To-Do List"
                    TextColor="DarkSlateGray"
                    VerticalOptions="Center" />
                <ImageButton
                    Grid.Column="1"
                    Margin="0,0,10,0"
                    BackgroundColor="Red"
                    Clicked="OnDeleteSelectedClicked"
                    HeightRequest="40"
                    HorizontalOptions="End"
                    Source="Resources/Images/delete.png"
                    WidthRequest="40" />
            </Grid>

            <!--  Input Section  -->
            <Frame
                Padding="10"
                BackgroundColor="LightYellow"
                CornerRadius="10">
                <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto">
                    <!--  Title Entry  -->
                    <Entry
                        x:Name="TitleEntry"
                        Grid.Row="0"
                        Grid.Column="0"
                        FontAttributes="Bold"
                        FontSize="16"
                        Placeholder="Enter a title :"
                        PlaceholderColor="DarkSlateGray"
                        VerticalOptions="Center" />

                    <!--  Task Entry  -->
                    <Entry
                        x:Name="TaskEntry"
                        Grid.Row="1"
                        Grid.Column="0"
                        FontAttributes="Bold"
                        FontSize="16"
                        Placeholder="Enter a new task :"
                        PlaceholderColor="DarkSlateGray"
                        VerticalOptions="Center" />

                    <!--  Add Button  -->
                    <Button
                        Grid.RowSpan="2"
                        Grid.Column="1"
                        BackgroundColor="#FFA500"
                        Clicked="OnAddTaskClicked"
                        CornerRadius="20"
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="Add"
                        TextColor="DarkSlateGray" />
                </Grid>
            </Frame>

            <!--  Task List Section  -->
            <CollectionView
                x:Name="TaskList"
                ItemsSource="{Binding Tasks}"
                SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Margin="5"
                            BackgroundColor="LightYellow"
                            CornerRadius="10">
                            <Grid
                                Padding="5"
                                ColumnDefinitions="Auto, *, Auto"
                                RowDefinitions="Auto, Auto">
                                <!--  Checkbox  -->
                                <CheckBox
                                    Grid.RowSpan="2"
                                    Grid.Column="0"
                                    Margin="0,0,15,0"
                                    BackgroundColor="LightYellow"
                                    HorizontalOptions="Start"
                                    IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                    VerticalOptions="Center"
                                    Color="DarkSlateGray" />

                                <!--  Title  -->
                                <Label
                                    Grid.Column="1"
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    Text="{Binding Title}"
                                    TextColor="Purple"
                                    VerticalOptions="Start" />

                                <!--  Message  -->
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    Text="{Binding Message}"
                                    TextColor="black"
                                    VerticalOptions="End" />

                                <!--  Move Buttons  -->
                                <StackLayout
                                    Grid.RowSpan="2"
                                    Grid.Column="2"
                                    HorizontalOptions="End"
                                    Orientation="Vertical">
                                    <ImageButton
                                        BackgroundColor="DarkGray"
                                        Clicked="OnMoveUpClicked"
                                        CommandParameter="{Binding .}"
                                        HeightRequest="30"
                                        Source="Resources/Images/uparrow.png"
                                        WidthRequest="30" />
                                    <ImageButton
                                        BackgroundColor="DarkGray"
                                         Margin="0,5,0,0"
                                        Clicked="OnMoveDownClicked"
                                        CommandParameter="{Binding .}"
                                        HeightRequest="30"
                                        Source="Resources/Images/downarrow.png"
                                        WidthRequest="30" />
                                </StackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
