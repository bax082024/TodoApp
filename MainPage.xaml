<ContentPage
    x:Class="ToDoListApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="DarkSlateGray">

    <VerticalStackLayout Padding="20" Spacing="20">
        <!--  Headline  -->
        <Label
            FontAttributes="Bold"
            FontFamily="BlackOpsOne"
            FontSize="32"
            HorizontalOptions="Center"
            Text="To-Do List"
            TextColor="OrangeRed" />

        <!--  Input Section  -->
        <Frame
            Padding="10"
            BackgroundColor="LightYellow"
            CornerRadius="10">
            <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto">
                <!--  Task Entry  -->
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,0,0,5"
                    FontAttributes="Bold"
                    FontSize="14"
                    Text="Enter a Task:"
                    TextColor="Black" />
                <Entry
                    x:Name="TaskEntry"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0"
                    HorizontalOptions="Fill"
                    Placeholder="Enter a new task"
                    VerticalOptions="Center" />

                <!--  Add Button  -->
                <Button
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    Padding="10"
                    BackgroundColor="#FFA500"
                    Clicked="OnAddTaskClicked"
                    CornerRadius="20"
                    HorizontalOptions="End"
                    Text="Add"
                    TextColor="White"
                    VerticalOptions="Center" />
            </Grid>
        </Frame>

        <!--  List of tasks  -->
        <CollectionView
            x:Name="TaskList"
            ItemsSource="{Binding Tasks}"
            SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame
                        Margin="5"
                        Padding="10"
                        BackgroundColor="LightYellow"
                        CornerRadius="10">
                        <Grid Padding="5" ColumnDefinitions="Auto, *, Auto, Auto">
                            <!--  Checkbox  -->
                            <CheckBox
                                CheckedChanged="OnTaskCheckedChanged"
                                IsChecked="{Binding IsCompleted}"
                                VerticalOptions="Center" />

                            <!--  Task Title  -->
                            <Label
                                Grid.Column="1"
                                FontSize="16"
                                Text="{Binding Title}"
                                VerticalOptions="Center" />

                            <!--  Move Buttons  -->
                            <StackLayout
                                Grid.Column="2"
                                HorizontalOptions="End"
                                Orientation="Vertical">
                                <Button
                                    BackgroundColor="Goldenrod"
                                    Clicked="OnMoveUpClicked"
                                    CommandParameter="{Binding .}"
                                    CornerRadius="5"
                                    FontSize="20"
                                    HeightRequest="40"
                                    Text="↑"
                                    TextColor="Black" />
                                <Button
                                    Margin="0,5,0,0"
                                    BackgroundColor="Goldenrod"
                                    Clicked="OnMoveDownClicked"
                                    CommandParameter="{Binding .}"
                                    CornerRadius="5"
                                    FontSize="20"
                                    HeightRequest="40"
                                    Text="↓"
                                    TextColor="Black" />
                            </StackLayout>

                            <!--  Trashcan Icon  -->
                            <ImageButton
                                Grid.Column="3"
                                Margin="10,0,0,0"
                                BackgroundColor="LightGray"
                                Clicked="OnDeleteTaskSwiped"
                                CommandParameter="{Binding .}"
                                HeightRequest="40"
                                HorizontalOptions="End"
                                Source="Resources/Images/bin.png"
                                WidthRequest="25" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
