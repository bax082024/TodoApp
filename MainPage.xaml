<ContentPage
    x:Class="ToDoListApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="DarkSlateGray">

    <VerticalStackLayout Padding="20" Spacing="20">
        <!--  Headline  -->
        <Label
            FontAttributes="Bold"
            FontSize="32"
            HorizontalOptions="Center"
            Text="To-Do List"
            TextColor="OrangeRed" />

        <!--  Input Section  -->
        <Frame
            Padding="10"
            BackgroundColor="LightYellow"
            CornerRadius="10">
            <Grid ColumnDefinitions="*, Auto, Auto" RowDefinitions="Auto">
                <!--  Task Entry  -->
                <Entry
                    x:Name="TaskEntry"
                    Grid.Column="0"
                    Margin="0"
                    HorizontalOptions="Fill"
                    Placeholder="Enter a new task"
                    VerticalOptions="Center" />

                <!--  Priority Picker  -->
                <Picker
                    x:Name="PriorityPicker"
                    Title="Priority"
                    Grid.Column="1"
                    Margin="10,0,10,0"
                    HorizontalOptions="Center"
                    ItemsSource="{StaticResource PriorityList}"
                    SelectedItem="{Binding SelectedPriority, Mode=TwoWay}"
                    TextColor="Black"
                    VerticalOptions="Center"
                    WidthRequest="100" />

                <!--  Add Button  -->
                <Button
                    Grid.Column="2"
                    Padding="10"
                    BackgroundColor="#FFA500"
                    Clicked="OnAddTaskClicked"
                    CornerRadius="20"
                    HorizontalOptions="End"
                    Text="Add"
                    TextColor="White"
                    VerticalOptions="Center" />
            </Grid>
        </Frame>

        <!--  List of tasks  -->
        <CollectionView x:Name="TaskList" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItem
                                    BackgroundColor="Red"
                                    Invoked="OnDeleteTaskSwiped"
                                    Text="Delete" />
                            </SwipeItems>
                        </SwipeView.RightItems>
                        <Frame
                            Margin="5"
                            Padding="10"
                            BackgroundColor="LightYellow"
                            CornerRadius="10">
                            <Grid Padding="5" ColumnDefinitions="Auto, *, Auto">
                                <!--  Checkbox  -->
                                <CheckBox
                                    CheckedChanged="OnTaskCheckedChanged"
                                    IsChecked="{Binding IsCompleted}"
                                    VerticalOptions="Center" />

                                <!--  Task Title  -->
                                <Label
                                    Grid.Column="1"
                                    FontSize="16"
                                    Text="{Binding Title}"
                                    VerticalOptions="Center" />

                                <!--  Priority  -->
                                <Label
                                    Grid.Column="2"
                                    FontSize="14"
                                    HorizontalOptions="End"
                                    Text="{Binding Priority}"
                                    TextColor="{Binding Priority, Converter={StaticResource PriorityColorConverter}}"
                                    VerticalOptions="Center" />
                            </Grid>
                        </Frame>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
